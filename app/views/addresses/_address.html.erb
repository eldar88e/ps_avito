<li class="list-group-item list-group-item-action <%= address.active ? '' : 'list-group-item-danger' %>" id="address_<%= address.id %>">

  <%= render partial: '/addresses/form', locals: { address: address, url: address_path(address), method: :patch, data: nil } %>

  <div class="row">
    <div class="col-12 col-md-2">
      <%= button_to t('buttons.delete'), address_path(address),
                    method: :delete, class: 'btn btn-danger mt-3 mt-md-0', style: 'width: 100%;',
                    data: { confirm: 'Вы уверены, что хотите удалить данный адресс и все с ним связанные картинки?',
                            controller: 'confirm', action: 'click->confirm#call' } %>
    </div>
    <div class="col-12 col-md-2">
      <%= button_to 'Создать картинки', store_update_img_path(address.store, address_id: address),
                    class: 'loader-btn mt-3 mt-md-0 btn btn-success', style: 'width: 100%;',
                    data: { controller: 'btn_preloader', action: 'click->btn_preloader#call' } %>
    </div>

    <div class="col-7 col-md-2">
      <%= button_to 'Обновить картинки', store_update_img_path(address.store, address_id: address, clean: true),
                    class: 'mt-3 mt-md-0 btn btn-dark',
                    data: { confirm: 'Вы уверены, что хотите удалить все старые картинки данного адреса и создать новые?',
                            controller: 'confirm', action: 'click->confirm#call' } %>
    </div>

    <div class="col-5 col-md-2">
      <%= link_to t('buttons.cities'), store_streets_path(store_id: address.store, address_id: address),
                    class: 'mt-3 mt-md-0 btn btn-primary', data: { turbo_prefetch: false } %>
    </div>
  </div>
</li>
