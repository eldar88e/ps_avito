<li class="list-group-item list-group-item-action <%= address.active ? '' : 'list-group-item-danger' %>">
  <%= form_with(model: address, url: address_path(address), method: :patch, format: :turbo_stream) do |form| %>
    <div class="row">
      <div class="col-12 mb-3">
        <%= form.label :store_address, 'Адрес', class: 'form-label', style: "font-weight: bold;" %>
        <%= form.text_field :store_address, value: address.store_address, class: 'form-control', style: 'width: 100%' %>
      </div>

      <div class="col-12 mb-3">
        <%= form.label :slogan_params, 'slogan_params', class: 'form-label' %>
        <%= form.text_area :slogan_params, size: '50x1', class: 'form-control', style: 'width: 100%' %>
      </div>

      <div class="col-12 col-md-1" style="word-wrap: break-word;">
        <% if address.image.attached? %>
            <% if address.image.blob.content_type.match?(/font/) %>
              <%= address.image.blob.filename %>
            <% else %>
              <%= image_tag url_for(address.image), class: 'img-fluid', style: 'max-height: 100px;' %>
            <% end %>
        <% else %>
          <span style="color: red;">Файл не указан!</span>
        <% end %>
      </div>

      <div class="col-12 col-md-5">
        <%= form.label :image, 'Указать изображение или шрифт', class: 'form-label' %>
        <%= form.file_field :image, class: 'form-control' %>
      </div>

      <div class="col-12 col-md-6">
        <%= form.label :slogan, 'Слоган', class: 'form-label' %>
        <%= form.text_field :slogan, value: address.slogan, class: 'form-control', style: 'width: 100%' %>
      </div>

      <div class="col-12 col-md-11 mb-3">
        <%= form.label :description, 'Описание', class: 'form-label' %>
        <%= form.text_area :description, size: '50x1', class: 'form-control', style: 'width: 100%' %>
      </div>

      <div class="col-12 col-md-1 mt-0 mt-md-2">
        <%= form.check_box :active, class: 'form-check-input', id: "active-checkbox-#{address.id}" %>
        <%= form.label :active, class: 'form-check-label', for: "active-checkbox-#{address.id}" %>
        <%= form.submit 'Edite', class: 'btn btn-warning mt-3 mt-md-0', style: 'width: 100%;' %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12 col-md-2">
      <%= button_to "Delete", address_path(address),
                    method: :delete, class: 'btn btn-danger mt-3 mt-md-0', style: 'width: 100%;',
                    data: { confirm: 'Вы уверены, что хотите удалить данный адресс и все с ним связанные картинки?',
                            controller: 'confirm', action: 'click->confirm#call' } %>
    </div>
    <div class="col-6 col-md-2">
      <%= button_to 'Создать картинки', update_img_path(store_id: address.store.id, address_id: address.id),
                    method: :post, class: 'mt-3 mt-md-0 btn btn-success', style: 'width: 100%;' %>
    </div>
    <div class="col-6 col-md-2">
      <%= form_with(url: update_img_path(store_id: address.store.id, address_id: address.id), method: :post) do |form| %>
        <%= form.hidden_field :clean, value: 1 %>
        <%= form.submit 'Обновить картинки', class: 'mt-3 mt-md-0 btn btn-dark', style: 'width: 100%;',
            data: { confirm: 'Вы уверены, что хотите удалить все старые картинки данного адреса и создать новые?',
                    controller: 'confirm', action: 'click->confirm#call' }%>
      <% end %>
    </div>
  </div>
</li>