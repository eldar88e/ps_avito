<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Ответ на коментарий</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<%= form_with(url: store_avito_review_path(id: @id), method: :patch) do |form| %>
  <div class="modal-body">
    <%= form.label :message, 'Message', class: 'form-label' %>
    <%= form.text_area :message, size: '50x3', class: 'form-control' %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= form.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
