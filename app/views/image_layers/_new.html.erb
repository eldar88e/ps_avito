<li class="list-group-item list-group-item-action list-group-item-success">
  <b>Новый слой</b>
  <%= form_with(model: @layer, url: image_layers_path(store_id: @store.id),
                method: :post, data: { controller: "clear-form" }) do |form| %>
    <div class="row">
      <div class="col-12 col-md-2">
        <%= form.label :title, 'title', class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control', style: 'width: 100%' %>
      </div>

      <div class="col-12 col-md-2">
        <%= form.label :layer, 'Картинка или шрифт', class: 'form-label' %>
        <%= form.file_field :layer, class: 'form-control' %>
      </div>

      <div class="col-8 col-md-2">
        <%= form.label :layer_type, 'layer_type', class: 'form-label' %>
        <%= form.select :layer_type, ImageLayer.layer_types.keys.map { |type| [type.humanize, type] }, {}, { class: 'form-select' } %>
      </div>

      <div class="col-4 col-md-1">
        <%= form.label :menuindex, 'menuindex', class: 'form-label' %>
        <%= form.text_field :menuindex, class: 'form-control', style: 'width: 100%' %>
      </div>

      <div class="col-12 col-md-4 mb-3 mb-md-0">
        <%= form.label :layer_params, 'layer_params', class: 'form-label' %>
        <%= form.text_area :layer_params, size: '50x1', class: 'form-control', style: 'width: 100%' %>
      </div>

      <div class="col-12 col-md-1 mt-0 mt-md-2">
        <%= form.check_box :active, class: 'form-check-input', id: 'active-checkbox-layer' %>
        <%= form.label :active, class: 'form-check-label', for: 'active-checkbox-layer' %>
        <%= form.submit 'Add', class: 'mt-3 mt-md-1 btn btn-primary btn-sm', style: 'width: 100%;',
                        data: { action: "click->clear-form#clearForm" } %>
      </div>
    </div>
  <% end %>
</li>