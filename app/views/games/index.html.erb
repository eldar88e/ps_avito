<% content_for :title do %>
  Игры PlayStation
<% end %>

<div class="container">
  <%= link_to 'Блэк лист', game_black_lists_path, class: 'mb-3 btn btn-dark btn-sm' %>
  <% if @games.present? %>
    <ul class="list-group" data-controller="fancybox no_image">
      <%= render @games %>
    </ul>
    <div data-controller="pagy-initializer" class="mt-3">
      <%== pagy_bootstrap_nav_js(@pagy) if @pagy.pages > 1 %>
    </div>
    <%== pagy_info(@pagy) %>
  <% else %>
    <p>Записей не найдено!</p>
  <% end %>
</div>
