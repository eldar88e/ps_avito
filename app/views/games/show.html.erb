<% content_for :title do %>
  <%= "#{@game.name} top: #{@game.top}" %>
<% end %>

<div class="container">
    <div class="mb-3">Platform: <%= @game.platform %></div>

    <%= turbo_frame_tag :game_black_list_buttons, class: 'mt-3' do %>
      <%= render '/game_black_lists/buttons' %>
    <% end %>

    <% if @game.image.attached? %>
      <%= image_tag url_for(@game.image), style: 'width: 100%; margin: 1em 0;' %>
    <% end %>

    <% @game.ads.each do |ad| %>
        <%= image_tag url_for(ad.image), style: 'width: 100%; margin: 1em 0;' %>
    <% end %>

    <div style="display: inline-block;">
      <div><%= @game.sony_id %></div>
    </div>
</div>
