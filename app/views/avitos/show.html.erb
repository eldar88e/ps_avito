<% content_for :title do %>
  Статистика и настройки <%= @store.manager_name %>
<% end %>

<div class="container">
  <%= turbo_frame_tag "avitos_#{@store.id}" do %>
    <ul class="list-group">
      <% @auto_load.each do |key, val| %>
        <li class="list-group-item list-group-item-action">
          <div class="row" style="overflow: hidden;">
            <% if val.is_a?(Array) %>
              <div class="col-6 col-md-3">
                <h5><%= t("avito.autoload.#{key}") %>:</h5>
              </div>
            <% else %>
              <div class="fw-bold col-6 col-md-3">
                <%= t("avito.autoload.#{key}") %>:
              </div>
              <div class="col-6 col-md-9">
                <% if key == 'autoload_enabled' %>
                  <%= val == true ? 'Включено' : 'Отключено' %>
                <% elsif key == 'upload_url' %>
                  <%= link_to val, val, title: t("avito.autoload.#{key}") %>
                <% else %>
                  <%= val %>
                <% end %>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>

      <% @auto_load['schedule'].first.each do |k, v| %>
        <li class="list-group-item list-group-item-action">
          <div class="row">
            <div class="fw-bold col-6 col-md-3">
              <%= t("avito.autoload.#{k}") %>:
            </div>
            <div class="col-6 col-md-9">
              <% if k == 'weekdays' %>
                <%= v.map { |i| @weekdays[i][:name] }.join(', ') %>
              <% elsif v.is_a?(Array) %>
                <%= v.sort.map { |i| "#{i}.00-#{i+1}.00" }.join(', ') %>
                <!--
                <ul class="pagination">
                  <%# (1..24).to_a.each do |hour| %>
                    <li class="page-item<%#= v.include?(hour) ? ' active' : '' %>"><span class="page-link"><%#= hour %></span></li>
                  <%# end %>
                </ul>
                -->
              <% else %>
                <%= v %>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

    <%= link_to 'Edit', edit_avito_path(@store), class: 'mt-3 btn btn-warning' %>

  <% end %>
  <div class="avito-buttons">
    <%= button_to 'Update', update_ads_avito_path(@store),
                  class: 'mt-3 btn btn-success', data: { turbo_prefetch: 'false' },
                  data: { confirm: 'Вы уверены, что хотите обновить объявления? Их можно обновлять не чаще одного раза в час.',
                          controller: 'confirm', action: 'click->confirm#call' } %>
  </div>

  <h2 class="mt-3 mb-3">Отчет по последней загрузке</h2>

  <ul class="list-group">
    <% @report.to_a[0..4].to_h.each do |key, val| %>
      <% next if key == 'finished_at' %>

      <div class="list-group-item list-group-item-action">
        <div class="row">
          <% if val.is_a?(Array) || val.is_a?(Hash) %>
            <div class="col-6 col-md-3">
              <h5><%= t("avito.autoload.report.#{key}") %>:</h5>
            </div>
          <% else %>
            <div class="fw-bold col-6 col-md-3">
              <%= t("avito.autoload.report.#{key}") %>:
            </div>
            <div class="col-6 col-md-9">
              <% if key == 'status' %>
                <div class="row">
                  <span class="badge bg-<%= val.match?(/warning/) ? 'warning text-dark' : 'primary' %>"><%= t("avito.autoload.report.#{val}") %></span>
                </div>
              <% elsif key == 'started_at' %>
                <%= @tz.utc_to_local(Time.parse(val)).strftime('%H:%M %d.%m.%Yг.') %>
              <% else %>
                <%= val %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="list-group-item list-group-item-action">
      <div class="row">
        <div class="fw-bold col-6 col-md-3">Обработано объявлений</div>
        <div class="col-6 col-md-9">
          <%= @report['section_stats']['sections'].map { |i| i['count'] }.sum %>
        </div>
      </div>
    </div>

    <div class="list-group-item list-group-item-action">
      <div class="row">
        <div class="ps-3 ps-md-3 fw-bold col-6 col-md-3">Объявлений в файле</div>
        <div class="col-6 col-md-9">
          <%= @report['section_stats']['sections'].map { |i| i['count'] if %w[will_publish_later not_publish error successful].include? i['slug'] }.compact.sum %>
        </div>
      </div>
    </div>

    <% @report['section_stats']['sections'].each do |section| %>
      <% if section['slug'] == 'removed_from_file' %>
        <div class="list-group-item list-group-item-action">
          <div class="row">
            <div class="ps-3 ps-md-3 fw-bold col-6 col-md-3">Удалено</div>
            <div class="col-6 col-md-9"></div>
          </div>
        </div>
      <% end %>

      <%= render partial: '/avitos/list_item', locals: { title: section['title'], value: section['count'] } %>

      <% section['sections'].each do |sec| %>
        <%= render partial: '/avitos/list_item', locals: { title: sec['title'], value: sec['count'], second: true } %>
      <% end %>
    <% end %>

    <% if success = @report['section_stats']['sections'].find { |i| i['slug'] == 'successful' } %>
      <li class="list-group-item list-group-item-action">
        <div class="row">
          <div class="fw-bold col-6 col-md-3">Платные услуги</div>
          <div class="col-6 col-md-9"></div>
        </div>
      </li>

      <li class="list-group-item list-group-item-action">
        <div class="row">
          <div class="ps-3 ps-md-3 fw-bold col-6 col-md-3">Размещение из пакета</div>
          <div class="col-6 col-md-9">
            <%= success['sections'].map { |i| i['count'] if %w[success_activated success_activated_updated success_added].include? i['slug'] }.compact.sum %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
