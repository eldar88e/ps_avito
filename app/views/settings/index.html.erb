<% content_for :title do %>
  Настройки
<% end %>

<div class="container">
  <% if @setting&.errors&.any? %>
    <div id="error_explanation">
      <h3>Возникли ошибки:</h3>
      <ul>
        <% @setting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <ul class="list-group">
    <li class="list-group-item list-group-item-action active mobile-none">
      <div class="row">
        <div class="col-4 col-md-2">Переменная</div>
        <div class="col-4 col-md-3">Значение</div>
        <div class="col-4 col-md-6">Описание</div>
        <div class="col-0 col-md-1"></div>
      </div>
    </li>
    <%= render @settings %>
    <%= render '/settings/new' %>
  </ul>

  <%= image_tag noimage_url, class: 'mt-3', style: 'width: 120px; height: 90px;' %>
</div>
