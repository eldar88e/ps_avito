<% content_for :title do %>
  <%= @product.title %>
<% end %>

<div class="container">
  <ul class="list-group">
    <% @product.attributes.keys.reject { |i| i.match?(/id|created_at|updated_at/) }.each do |name| %>
      <li class="list-group-item list-group-item-action">
        <strong><%= name %>: </strong><%= @product.send(name.to_sym) %>
      </li>
    <% end %>
    <li class="list-group-item list-group-item-action">
      <strong>image: </strong>
      <% if @product.image.attached? %>
          <a href='<%= url_for(@product.image) %>'>
            <%= image_tag url_for(@product.image), style: 'height: 100px;' %>
          </a>
      <% end %>
    </li>
  </ul>
  <a href="<%= edit_product_path(@product) %>" class='mt-3 btn btn-warning'>Edite</a>
</div>