<div class="container">
  <h1>Магазин <%= @store.manager_name %></h1>
  <ul class="list-group">
    <% colum_names = @store.attributes.keys %>
    <% colum_names.each do |name| %>
      <li class="list-group-item list-group-item-action">
        <strong><%= name %>: </strong><%= @store.send(name.to_sym) %>
      </li>
    <% end %>
  </ul>

  <div class="mb-3"></div>

  <a href="<%= edit_store_path(@store.id) %>" class='btn btn-primary'>Edite</a>

  <div class="mb-3 mb-md-5"></div>

  <h2>Слои картинки</h2>
  <ul class="list-group">
    <%= render @image_layers %>
    <%= render '/image_layers/new' %>
  </ul>

  <div class="mb-3 mb-md-5"></div>

  <h2>Адреса магазина</h2>
  <ul class="list-group">
    <%= render @addresses %>
    <%= render '/addresses/new' %>
  </ul>
</div>