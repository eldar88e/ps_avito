<div class="container">
  <h1>Создать новый Магазин.</h1>
  <%= form_with(model: @store, url: stores_path, method: :post) do |form| %>

    <% if @store.errors.any? %>
      <div id="error_explanation">
        <h3>Возникли ошибки:</h3>
        <ul>
          <% @store.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <label for="manager_name" class="form-label">Manager name</label>
      <%= form.text_field :manager_name, class: 'form-control',
                          style: 'width: 100%', placeholder: 'Manager name' %>
    </div>

    <div class="mb-3">
      <label for="var" class="form-label">Variable</label>
      <%= form.text_field :var, class: 'form-control', style: 'width: 100%', placeholder: 'var' %>
    </div>

    <div class="mb-3">
      <label for="ad_status" class="form-label">Ad status</label>
      <%= form.text_field :ad_status, class: 'form-control', style: 'width: 100%', placeholder: 'Ad status' %>
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">Category</label>
      <%= form.text_field :category, value: 'Игры, приставки и программы',
                          class: 'form-control', style: 'width: 100%', placeholder: 'Category' %>
    </div>

    <div class="mb-3">
      <label for="goods_type" class="form-label">Goods type</label>
      <%= form.text_field :goods_type, value: 'Игры для приставок', class: 'form-control',
                          style: 'width: 100%', placeholder: 'Goods type' %>
    </div>

    <div class="mb-3">
      <label for="type" class="form-label">Type</label>
      <%= form.text_field :type, value: 'Другое', class: 'form-control',
                          style: 'width: 100%', placeholder: 'Type' %>
    </div>

    <div class="mb-3">
      <label for="ad_type" class="form-label">Ad type</label>
      <%= form.text_field :ad_type, value: 'Товар приобретен на продажу', class: 'form-control',
                          style: 'width: 100%', placeholder: 'Ad type' %>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label tinymce">Общее описание</label>
      <%= form.text_area :description, class: 'form-control',
                         style: 'width: 100%', size: '50x7', placeholder: 'Description' %>
    </div>

    <div class="mb-3">
      <label for="desc_game" class="form-label">Описание для Игр</label>
      <%= form.text_area :desc_game, size: '50x5', class: 'form-control',
                         style: 'width: 100%', placeholder: 'Описание для Игр' %>
    </div>

    <div class="mb-3">
      <label for="desc_product" class="form-label">Описание для других объявлений</label>
      <%= form.text_area :desc_product, size: '50x5', class: 'form-control',
                         style: 'width: 100%', placeholder: 'Описание для других объявлений' %>
    </div>

    <div class="mb-3">
      <label for="condition" class="form-label">Condition</label>
      <%= form.text_field :condition, value: 'Новое', class: 'form-control',
                          style: 'width: 100%', placeholder: 'Condition' %>
    </div>

    <div class="mb-3">
      <label for="allow_email" class="form-label">Allow email</label>
      <%= form.text_field :allow_email, value: 'Нет', class: 'form-control',
                          style: 'width: 100%', placeholder: 'Allow email' %>
    </div>

    <div class="mb-3">
      <label for="contact_phone" class="form-label">Телефон</label>
      <%= form.text_field :contact_phone, class: 'form-control', style: 'width: 100%', placeholder: 'Сontact phone' %>
    </div>

    <div class="mb-3">
      <label for="contact_method" class="form-label">Способ связи</label>
      <%= form.select :contact_method,
                      options_for_select(['По телефону и в сообщениях', 'По телефону', 'В сообщениях']),
                      {}, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <label for="game_img_params" class="form-label">Параметры лого</label>
      <%= form.text_area :game_img_params, value: @store.game_img_params,
                          class: 'form-control', style: 'width: 100%', size: '50x1',
                          placeholder: "нужно указать ввиде json: { pos_x: 448, pos_y: 208 }" %>
    </div>

    <div class="mb-3">
      <label for="menuindex" class="form-label">Расположение в слоях изображения для авито</label>
      <%= form.text_field :menuindex, class: 'form-control', style: 'width: 100%', value: 1 %>
    </div>

    <div class="mb-3">
      <%= form.check_box :active, class: 'form-check-input' %>
      <%= form.label :active, class: 'form-check-label' %>
    </div>

    <div class="mb-3">
      <%= form.submit 'Add', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
