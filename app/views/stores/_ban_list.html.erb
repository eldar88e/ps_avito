<div class="tab-pane fade" id="ban" role="tabpanel" aria-labelledby="ban-tab">
  <%= turbo_frame_tag :ban do %>
    <% if @ban.present? %>
      <ul class="list-group">
        <li class="list-group-item list-group-item-action active d-none d-md-block">
          <div class="row">
            <div class="col-1">№</div>
            <div class="col-2">№ отчета</div>
            <div class="col-5">Avito ID</div>
            <div class="col-2">Добавлено</div>
            <div class="col-2">Заблокировано до</div>
          </div>
        </li>
        <% @ban.each do |item| %>
          <li class="list-group-item list-group-item-action">
            <div class="row">
              <div class="col-6 col-md-1"><%= item.id %></div>
              <div class="col-6 col-md-2"><%= item.report_id %></div>
              <div class="col-12 col-md-5"><%= item.ad_id %></div>
              <div class="col-6 col-md-2"><%= format_date item.created_at %></div>
              <div class="col-6 col-md-2"><%= format_date item.expires_at %></div>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>

    <div data-controller="pagy_initializer" class="mt-3 mb-3">
      <%== pagy_bootstrap_nav_js(@pagy) if @pagy.pages > 1 %>
    </div>

    <%== pagy_info(@pagy) %>
  <% end %>
</div>