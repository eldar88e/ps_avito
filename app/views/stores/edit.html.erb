<div class="container">
  <h1>Магазин <%= @store.manager_name %></h1>
  <%= form_with(model: @store, url: store_path(@store.id), method: :patch) do |form| %>

    <% if @store.errors.any? %>
      <div id="error_explanation">
        <h3>Возникли ошибки:</h3>
        <ul>
          <% @store.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <label for="manager_name" class="form-label">Manager name</label>
      <%= form.text_field :manager_name, value: @store.manager_name,
                          class: 'form-control', style: 'width: 100%', placeholder: 'Manager name' %>
    </div>

    <div class="mb-3">
      <label for="var" class="form-label">Variable</label>
      <%= form.text_field :var, value: @store.var, class: 'form-control', style: 'width: 100%', placeholder: 'var' %>
    </div>

    <div class="mb-3">
      <label for="ad_status" class="form-label">Ad status</label>
      <%= form.text_field :ad_status, value: @store.ad_status,
                          class: 'form-control', style: 'width: 100%', placeholder: 'Ad status' %>
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">Category</label>
      <%= form.text_field :category, value: @store.category,
                          class: 'form-control', style: 'width: 100%', placeholder: 'Category' %>
    </div>

    <div class="mb-3">
      <label for="goods_type" class="form-label">Goods type</label>
      <%= form.text_field :goods_type, value: @store.goods_type,
                          class: 'form-control', style: 'width: 100%', placeholder: 'Goods type' %>
    </div>

    <div class="mb-3">
      <label for="ad_type" class="form-label">Ad type</label>
      <%= form.text_field :ad_type, value: @store.ad_type,
                          class: 'form-control', style: 'width: 100%', placeholder: 'Ad type' %>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Описание</label>
      <%= form.text_area :description, value: @store.description, size: '50x10',
                         class: 'form-control', style: 'width: 100%', placeholder: 'Description' %>
    </div>

    <div class="mb-3">
      <label for="condition" class="form-label">Condition</label>
      <%= form.text_field :condition, value: @store.condition,
                          class: 'form-control', style: 'width: 100%', placeholder: 'Condition' %>
    </div>

    <div class="mb-3">
      <label for="allow_email" class="form-label">Allow email</label>
      <%= form.text_field :allow_email, value: @store.allow_email,
                          class: 'form-control', style: 'width: 100%', placeholder: 'Allow email' %>
    </div>

    <div class="mb-3">
      <label for="contact_phone" class="form-label">Телефон</label>
      <%= form.text_field :contact_phone, value: @store.contact_phone,
                          class: 'form-control', style: 'width: 100%', placeholder: 'Сontact phone' %>
    </div>

    <div class="mb-3">
      <label for="game_img_params" class="form-label">Параметры картинки игры</label>
      <%= form.text_area :game_img_params, value: @store.game_img_params,
                          class: 'form-control', style: 'width: 100%', size: '50x1',
                          placeholder: "нужно указать ввиде json: { 'flag': { 'width': 200, 'height': 300 } }" %>
    </div>

    <div class="mb-3">
      <%= form.label :menuindex, 'Расположение картинки в слоях изображения для авито', class: 'form-label' %>
      <%= form.text_field :menuindex, class: 'form-control', style: 'width: 100%' %>
    </div>

    <div class="mb-3">
      <%= form.check_box :active, { checked: @store.active }, class: 'form-check-input' %>
      <%= form.label :active, class: 'form-check-label' %>
    </div>

    <div class="mb-3">
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
